    <DataTemplate x:Key="HamburgerMenuItem">
        <Grid Width="240"
              Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <FontIcon Grid.Column="0"
                      Margin="12,12,11,12"
                      FontFamily="Segoe MDL2 Assets"
                      Glyph="{Binding Glyph}"
                      Foreground="White" />
            <TextBlock Grid.Column="1"
                       Text="{Binding Label}"
                       Foreground="White"
                       FontSize="16"
                       VerticalAlignment="Center" />
        </Grid>
    </DataTemplate>

