                        <StackPanel x:Name="ErrorPanel"
                                    VerticalAlignment="Top"
                                    RenderTransformOrigin="0.5,0.5"
                                    Opacity="0"
                                    Padding="12">
                            <StackPanel.RenderTransform>
                                <CompositeTransform />
                            </StackPanel.RenderTransform>
                            <TextBlock x:Name="ErrorTextBlock"
                                       TextWrapping="Wrap"
                                       Text="{TemplateBinding ErrorText}"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       HorizontalAlignment="Left"
                                       RenderTransformOrigin="0.5,0.5"
                                       Pivot.SlideInAnimationGroup="GroupOne">
                                <TextBlock.RenderTransform>
                                    <CompositeTransform />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <Button x:Name="ReloadButton"
                                    Content="{TemplateBinding ButtonText}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    BorderThickness="0"
                                    Margin="0,15,0,0"
                                    RenderTransformOrigin="0.5,0.5"
                                    Pivot.SlideInAnimationGroup="GroupTwo">
                                <Button.RenderTransform>
                                    <CompositeTransform />
                                </Button.RenderTransform>
                            </Button>
                        </StackPanel>
                        <StackPanel x:Name="LoadingPanel"
                                    VerticalAlignment="Top"
                                    RenderTransformOrigin="0.5,0.5"
                                    Opacity="0"
                                    Visibility="Collapsed"
                                    Pivot.SlideInAnimationGroup="GroupOne"
                                    Padding="12">
                            <StackPanel.RenderTransform>
                                <CompositeTransform />
                            </StackPanel.RenderTransform>
                            <TextBlock x:Name="LoadingTextBlock"
                                       TextWrapping="Wrap"
                                       Text="{TemplateBinding LoadingText}"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       HorizontalAlignment="Left"
                                       RenderTransformOrigin="0.5,0.5"
                                       Pivot.SlideInAnimationGroup="GroupOne">
                                <TextBlock.RenderTransform>
                                    <CompositeTransform />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <ProgressRing x:Name="LoadingRing"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          IsActive="True"
                                          Background="Transparent"
                                          Foreground="{ThemeResource AccentHighBrush}"
                                          Width="30"
                                          Height="30"
                                          RenderTransformOrigin="0.5,0.5"
                                          Pivot.SlideInAnimationGroup="GroupTwo">
                                <ProgressRing.RenderTransform>
                                    <CompositeTransform />
                                </ProgressRing.RenderTransform>
                            </ProgressRing>
                        </StackPanel>
                        <TextBlock x:Name="NoDataTextblock"
                                   TextWrapping="Wrap"
                                   Text="{TemplateBinding NoDataText}"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   RenderTransformOrigin="0.5,0.5"
                                   Margin="0,0,20,0"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Visibility="Collapsed"
                                   Opacity="0"
                                   Padding="12"
                                   Pivot.SlideInAnimationGroup="GroupOne">
                            <TextBlock.RenderTransform>
                                <CompositeTransform />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <ContentPresenter x:Name="Prsenter"
                                          Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Opacity="0"
                                          Visibility="Collapsed" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

